<assembly>
  <id>bundle</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <unpack>true</unpack>
      <scope>runtime</scope>
      <includes>
        <include>com.envoisolutions.sxc:sxc-core</include>
        <include>com.envoisolutions.sxc:sxc-runtime</include>
        <include>com.envoisolutions.sxc:sxc-jaxb</include>
      </includes>
      <excludes>
        <exclude>*:jar</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory></outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
